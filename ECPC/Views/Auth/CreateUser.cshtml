@{
    Layout = null; // Disable default layout
    ViewData["Title"] = "Create User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ECPC</title>
    <link rel="stylesheet" href="~/css/createuser.css">
</head>
<body>
    <div class="createuser-container">
        <h2 class="createuser-title">Create Your Account</h2>

        <form method="post" action="/Auth/CreateUser" class="createuser-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" placeholder="Enter your username" required />
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required />
            </div>
            <div>
                <button type="submit" class="createuser-button">Create Account</button>
            </div>
        </form>

        <div class="createuser-footer">
            <p>Already have an account? <a href="/Auth/Login">Login here</a></p>
        </div>
    </div>
</body>
</html>
